{
  "name": "pro11-push-update-server",
  "version": "2.0.0",
  "description": "Pro11 push update service",
  "main": "src/index.js",
  "author": "cha777 (chathuranga_wm@yahoo.com)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "npm i --prefix client",
    "dev": "nodemon .",
    "start:server": "node .",
    "start:client": "npm run dev --prefix client",
    "start": "npm-run-all start:server start:client",
    "build:client": "rimraf ./dist/release-uploader && npm run build --prefix client && mv client/dist ./dist/release-uploader",
    "build:server": "pkg package.json",
    "build": "npm-run-all build:client build:server"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "axios": "0.21.1",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "winston-logrotate": "^1.3.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "pkg": "^5.8.0",
    "rimraf": "^4.4.0",
    "yarn-run-all": "^3.1.1"
  },
  "bin": "src/index.js",
  "pkg": {
    "scripts": "src/**/*.js",
    "targets": [
      "node16-macos-x64",
      "node16-linux-x64"
    ],
    "outputPath": "dist"
  },
  "engines": {
    "node": "16.x"
  }
}
